<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/fragmentOnboarding"
    android:id="@+id/nav_host_auth_fragment">
    <fragment
        android:id="@+id/fragmentOnboarding"
        android:name="com.capstone.pulih.ui.onboarding.walkthrough.OnboardingFragment"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/onboarding_to_welcome"
            app:destination="@id/welcomeFragment"
            app:popUpToInclusive="false"/>
        <action
            android:id="@+id/onboarding_to_auth"
            app:destination="@id/authActivity"
            app:popUpToInclusive="false"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.capstone.pulih.ui.auth.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/nav_login_to_welcome"
            app:destination="@id/welcomeFragment"/>
        <action
            android:id="@+id/nav_login_to_register"
            app:destination="@id/registerFragment"/>
        <action
            android:id="@+id/nav_login_to_main"
            app:destination="@id/mainActivity"/>
        <argument
            android:name="is_from_register"
            app:argType="boolean"/>
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.capstone.pulih.ui.auth.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/nav_regist_to_login"
            app:destination="@id/loginFragment"/>
        <action android:id="@+id/nav_register_to_login"
            app:destination="@id/loginFragment"/>
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.capstone.pulih.ui.onboarding.welcome.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/nav_login_user"
            app:destination="@id/loginFragment"
            app:popUpToInclusive="false"/>
    </fragment>

    <activity
        android:id="@+id/mainActivity"
        android:name="com.capstone.pulih.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main"/>
    <activity
        android:id="@+id/authActivity"
        android:name="com.capstone.pulih.ui.auth.authactivity.AuthActivity"
        tools:layout="@layout/activity_auth"/>


</navigation>